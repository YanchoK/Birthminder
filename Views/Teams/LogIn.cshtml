
@model IEnumerable<Birthminder.Data.Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

</head>

<div class="container w-50 m-5 border-5">
    <span>  info</span>


    <div class="input-group mb-3">
        <div class="input-group">
            <span class="input-group-text">First and last name</span>
            <input type="text" aria-label="First name" class="form-control">
            <input type="text" aria-label="Last name" class="form-control">
        </div>
    </div>

    <input class="mt-3" type="date" value="2001-01-01">

    <select id="ChooseTeam">
        @foreach (var item in Model)
        {
            <option value="1"> @Html.DisplayFor(modelItem => item.Name)</option>

        }

    </select>
    <a asp-area="" asp-controller="Home" asp-action="WishList" style="position:relative; top:10vh;">Next</a>
</div>

