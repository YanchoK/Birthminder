@model IEnumerable<Birthminder.Data.User>


@{
    ViewData["Title"] = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        #members {
            text-decoration: underline;
        }
        .wish-container {
            position: relative;
            margin-left: 20px;
            width: 60vw;
            height: 60vh;
            border: 2px solid;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 0;
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: inline;
            height: 100%;
        }

        p {
            text-decoration: none;
            display: inline;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            font-size: 2vw;
            color: black;
            position: absolute;
            left: 8vw;
            top: 3vh;

        }

        li {
            border-bottom: 1px solid black;
            position: relative;
            height: 33%;
            width: 100%;
        }
      
        li:hover{
            border:2px solid orange;
        }
        .info-holder {
            position: absolute;
            right: 0;
            bottom: 0;
            height: 110vh;
            width: 49vw;
            background-color: #fcd277d5;
            clip-path: circle(55.4% at 100% 58%);
        }

        .info {
            position: absolute;
            top: 23vh;
            left: 70vw;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .name {
            display: block;
            font-size: 4vw;
            font-weight: 600;
        }

        .line {
            position: absolute;
            left: 5vw;
            top: 26vh;
            width: 22vw;
            height: 1vh;
            background-color: black;
            border-radius: 10vw;
        }
    </style>
    <title>Members</title>
</head>
<body>
    <div class="wish-container">
        <ul>
            @foreach (var item in Model)
            {
            <a id="1" class="item" asp-action="Wishlist" asp-route-id="@item.Id" style="text-decoration:none">
                <li>
                    <p>@Html.DisplayFor(modelItem => item.FullName)</p>

                    <p style="position:relative; left:35vw; top:7vh"> @Html.DisplayFor(modelItem => item.BirthDate) </p>
                </li>
            </a>
            }
        </ul>
    </div>
    <div class="info-holder"></div>
    <div class="info">
        <p class="name">@ViewBag.TeamName</p>
        <div class="line"></div>
    </div>

</body>
</html>
