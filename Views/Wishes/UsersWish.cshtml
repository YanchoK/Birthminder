
@{
    ViewData["Title"] = "UsersWish";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .pic {
            position: relative;
            top: -5vh;
            left: 10vw;
            max-width: 200px;
            height: 100px;
            padding: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: #cccccc;
            border: 4px solid orange;
            border-radius: 10px;
        }

        .btn {
            position: absolute;
            top: 90vh;
            left: 75vw;
            padding-left: 15px;
            padding-right: 15px;
            padding-top: 5px;
            padding-bottom: 5px;
            border: 3px solid #F5821F;
            background-color: #F5821F;
            font-size: 2vw;
            font-weight: 600;
            border-radius: 15px;
        }

            .btn:hover {
                background-color: white;
                color: #F5821F;
            }

        p {
            top: -5vh;
            position: relative;
            padding: 5px;
            margin-left: 10vw;
            width: 38vw;
            height: auto;
            margin-bottom: 20px;
            border: 2px solid orange;
            border-radius: 5px;
            font-size: 1.5vw;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .desc {
            position: relative;
            width: 36vw;
            margin-top: 7vh;
            padding-left: 5vh;
            min-height: 5vh;
            height: auto;
            margin-bottom: 0px;
            word-break: break-all;
        }
    </style>
</head>

<body>
    <img src="~/img/Fly.png" style=" height:100vh;width:auto; position:absolute; bottom:0px;right:0px; margin:0px" z-index:-20;>
    <div>

        @if (ViewBag.Wish.ImageLink != null)
        {
            <img src="@(Url.Content("~/userImages/") + ViewBag.Wish.ImageLink)" class="gift pic" alt="@ViewBag.Wish.Title Image">
        }
        else
        {
            <img src="~/img/gift.png" class="gift pic" alt="Gift Image">
        }

        <p>
            <a href="@ViewBag.Wish.Link" target="_blank">@ViewBag.Wish.Title</a>
        </p>
        <p class="desc">@ViewBag.Wish.Description</p>
    </div>
    <a asp-action="Wishlist" asp-route-id="@ViewBag.Wish.UserId"><button class="btn">Wishlist</button></a>
</body>
