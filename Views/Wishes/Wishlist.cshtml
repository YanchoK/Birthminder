@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .wish-container {
            position: relative;
            margin-left: 20px;
            width: 60vw;
            height: 60vh;
            border: 2px solid;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 0;
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: inline;
            height: 100%;
        }

        li {
            border-bottom: 1px solid black;
            position: relative;
            height: 33%;
            width: 100%;
        }

        .index {
            position: relative;
            display: inline;
            margin-left: 3vw;
            font-size: 5vh;
            top: 3vh;
        }

        .gift {
            width: 12%;
            height: auto;
            margin: 0;
            position: relative;
            display: inline;
            top: 5vh;
            margin-left: 4vh;
        }

        li a {
            position: relative;
            text-decoration: none;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            font-size: 3vw;
            color: black;
            top: 3vh;
            margin-left: 10vw;
        }

            li a :hover {
                text-decoration: underline;
            }

        .change {
            margin: 0px;
            position: relative;
            display: inline;
            left: 25%;
            height: 5vh;
            width: auto;
            top: 3vh;
        }

        #wishlist {
            text-decoration: underline;
        }

      

            #button:hover {
                color: #3f341cd5;
                background-color: #ffffffd5;
                cursor: pointer;
            }

        .info-holder {
            position: absolute;
            right: 0;
            bottom: 0;
            height: 110vh;
            width: 49vw;
            background-color: #fcd277d5;
            clip-path: circle(55.4% at 100% 58%);
        }

        .info {
            position: absolute;
            top: 23vh;
            left: 78vw;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .name {
            display: block;
            font-size: 4vw;
            font-weight: 600;
        }

        .line {
            position: absolute;
            left: -2vw;
            top: 22vh;
            width: 22vw;
            height: 1vh;
            background-color: black;
            border-radius: 10vw;
        }

        .team {
            font-size: 2vw;
            font-weight: 600;
            margin-top: 80px;
        }

        .date {
            font-size: 2vw;
            font-weight: 600;
            margin-top: 40px;
        }

    </style>

    <title>WishList</title>
</head>

<body>

    <div class="wish-container" id="con">
        <ul id="menu">
            @foreach (var wish in ViewBag.Wishes)
            {
                <li>

                    @if (wish.ImageLink != null)
                    {
                        <img src="@(Url.Content("~/userImages/") + wish.ImageLink)" class="gift" alt="wish img" style="max-height:70px">
                    }
                    else
                    {
                        <img src="~/img/gift.png" class="gift" alt="wish img">
                    }

                    <a class="item" asp-action="UsersWish" asp-route-id="@wish.Id">@wish.Title</a>
                </li>
            }

        </ul>

    </div>

    <div class="info-holder"></div>
    <div class="info">
        <p class="name">@ViewBag.User.FullName.Split(' ')[0]</p>
        <div class="line"></div>
        <p class="team">Team: @ViewBag.TeamName<br></p>
        <p class="date">Birthday: @ViewBag.User.BirthDate.Day.@ViewBag.User.BirthDate.Month.@ViewBag.User.BirthDate.Year</p>
    </div>

</body>

</html>



